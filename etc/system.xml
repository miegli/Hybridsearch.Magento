<?xml version="1.0"?>
<!--
/**
 * @category  magento
 */
-->
<config>
    <sections>
        <magento translate="label" module="magento">
            <label>Hybridsearch</label>
            <tab>service</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <info translate="label" module="magento">
                    <label>Information</label>
                    <frontend_type>text</frontend_type>
                    <expanded>1</expanded>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <endpoint translate="label tooltip" module="magento">
                            <label>Endpoint</label>
                            <frontend_type>text</frontend_type>
                            <tooltip>Enter hybridsearch.io endpoint</tooltip>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </endpoint>
                        <token translate="label tooltip" module="magento">
                            <label>Api-Key</label>
                            <frontend_type>text</frontend_type>
                            <tooltip>Enter hybridsearch.io api key</tooltip>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </token>
                        <additionAttributeData translate="label tooltip" module="magento">
                            <label>Additional attribute data</label>
                            <frontend_type>textarea</frontend_type>
                            <tooltip>Additional attribute data (comma separated values)</tooltip>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </additionAttributeData>

                    </fields>
                </info>
            </groups>
        </magento>
    </sections>
</config>