<?xml version="1.0"?>
<config>
    <modules>
        <Hybridsearch_Magento>
            <version>1.0.0</version>
        </Hybridsearch_Magento>
    </modules>
    <global>
        <helpers>
            <magento>
                <class>Hybridsearch_Magento_Helper</class>
            </magento>
        </helpers>
        <models>
            <hybridsearch_magento>
                <class>Hybridsearch_Magento_Model</class>
            </hybridsearch_magento>
        </models>
        <events>
            <after_reindex_process_catalogsearch_fulltext>
                <observers>
                    <hybridsearch_magento>
                        <class>hybridsearch_magento/observer</class>
                        <method>syncAll</method>
                        <type>singleton</type>
                    </hybridsearch_magento>
                </observers>
            </after_reindex_process_catalogsearch_fulltext>
            <catalog_product_save_after>
                <observers>
                    <hybridsearch_magento>
                        <class>hybridsearch_magento/observer</class>
                        <method>syncOne</method>
                        <type>singleton</type>
                    </hybridsearch_magento>
                </observers>
            </catalog_product_save_after>
        </events>
    </global>
</config>